{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "node",
      "element-plus/global",
      "vue-i18n",
      "@types/jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "__tests__/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
